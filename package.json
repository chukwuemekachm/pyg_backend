{
  "name": "pyg_backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "build": "rm -rf dist && tsc",
    "dev": "export NODE_ENV=development && nodemon --exec ts-node src/index.ts",
    "test": "jest --runInBand --detectOpenHandles",
    "pretest": "export NODE_ENV=test && yarn typeorm migration:revert && yarn typeorm migration:run",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "lint:fix": "rm -rf dist && tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint": "rm -rf dist && tsc --noEmit && eslint '*/**/*.{js,ts}'",
    "create:db": "createdb -U postgres -h localhost pyg_dev && createdb -U postgres -h localhost pyg_test",
    "migrate:db": "yarn typeorm migration:run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.18.2",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1"
  }
}
